<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Restaurant Create</title>
  </head>
  <body>
    <div class="container">
      @{
        if(Model != null)
        {
          <form action="/Restaurant" method="post">
            <h2>Enter a Restaurant Name: </h2>
            <input type="text" name="name">
            <h2>Select a Cuisine Type</h2>
            <select name="cuisine">
              @foreach(var item in Model)
              {
                <option value="@item.GetId()">@item.GetName()</option>
              }
            </select>
            <h2>Enter When The Restaurant Started:</h2>
            <input type="date" name="date">
            <h2>Enter Restaurant Location:</h2>
            <input type="text" name="location">
            <button type="Submit" name="button">Submit</button>
          </form>
        }
        else
        {
          <h2>Please Enter a Cuisine to Continue</h2>
          <a href="/Cuisine/Create">Click Here to Create a Cuisine</a>
        }
      }
    </div>
  </body>
</html>
