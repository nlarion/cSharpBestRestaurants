<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Cuisine Types</title>
  </head>
  <body>
    <div class="container">
      <a href="/">Return Home</a><br>
      <a href="Cuisine/Create">Add a New Cuisine Type</a><br>
      <a href="/Cuisine/Delete">Delete All Cuisine Types</a>
      @{
        if(Model!=null)
        {
          if(Model is string)
          {
            <h3>Successfully Deleted All Cuisine</h3>
          }
          else if (Model.Count == 0)
          {
            <h3>Please Add a Cuisine</h3>
          }
          else
          {
            foreach(var item in Model)
            {
              <h3><a href="/Cuisine/@item.GetId()">@item.GetName()</a></h3>
              <h5><a href="/Cuisine/Delete/@item.GetId()">Delete</a></h5>
            }
          }
        }
      }
    </div>
  </body>
</html>
